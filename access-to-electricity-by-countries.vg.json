{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Access to Electricity (%) by Country",
      "fontSize": 24,
      "font": "Oswald",
      "fontWeight": "bold",
      "anchor": "middle",
      "color": "#333"
},
    "width": 600,
    "height": 400,
    "params": [
      {
        "name": "year",
        "value": 2019,
        "bind": {
          "input": "range",
          "min": 1990,
          "max": 2021,
          "step": 1,
          "name": "Select the year:"
        }
      }
    ],
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/Ryuji-arch/3179/refs/heads/main/ne_110m_admin_0_countries.json",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "transform": [
          {
            "calculate": "'Data is not available in ' + datum.properties.NAME",
            "as": "note"
          }
        ],
        "mark": {
          "type": "geoshape",
          "fill": "#ddd",
          "stroke": "white",
          "strokeWidth": 1
        },
        "encoding": {
          "tooltip": {"field": "note"}
        }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/Ryuji-arch/3179/refs/heads/main/electricity-access-by-population.csv",
          "format": {"type": "csv"}
        },
        "transform": [
          {
            "lookup": "Code",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/Ryuji-arch/3179/refs/heads/main/ne_110m_admin_0_countries.json",
                "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
              },
              "key": "properties.ISO_A3",
              "fields": ["properties", "type", "geometry"]
            }
          },
          {"filter": "datum.Year == year"}
        ],
        "mark": {"type": "geoshape"},
        "encoding": {
          "color": {
            "field": "Access_to_electricity",
            "type": "quantitative",
            "title": "Access to Electricity (%)",
            "scale": {"scheme": "blues"}
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "Access_to_electricity", "type": "quantitative", "title": "Electricity Access (%)"},
            {"field": "Year", "type": "quantitative", "title": "Year"}
          ]
        }
      }
    ],
    "projection": {"type": "equalEarth"},
    "config": {}
  }
  